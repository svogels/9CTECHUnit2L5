import pygame
import random

# --- Constants ---
SCREEN_WIDTH = 800
SCREEN_HEIGHT = 600
FPS = 60

# --- Colors ---
BLACK = (0, 0, 0)
WHITE = (255, 255, 255)
RED = (255, 0, 0)
GREEN = (0, 255, 0)

# --- Pygame Setup ---
pygame.init()
screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
pygame.display.set_caption("My Game")
clock = pygame.time.Clock()

# --- Sprite Groups ---
# (This is where the code from Step 1 will go)


# --- Player and Enemy Classes ---
# (This is where the code from Step 2 and 3 will go)


# --- Create Sprites ---
# (This is where we'll create the player and enemies)


# --- Game Loop ---
running = True
while running:
    # Keep loop running at the right speed
    clock.tick(FPS)

    # Process input (events)
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Update
    # (This is where the collision code from Step 4 will go)


    # Draw / render
    screen.fill(BLACK)
    # all_sprites.draw(screen) # We'll uncomment this later

    # *after* drawing everything, flip the display
    pygame.display.flip()

pygame.quit()
