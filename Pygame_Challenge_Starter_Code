# Pygame Challenge Starter Code
# Year 9 Game Design

# ------------------------------------------------------------
# 1. SETUP
# ------------------------------------------------------------
import pygame
import random
import math # Needed for the Gold Level sine wave challenge

# Initialize Pygame
pygame.init()
# pygame.mixer.init() # Uncomment this for the Silver Level sound challenge

# Screen dimensions
SCREEN_WIDTH = 800
SCREEN_HEIGHT = 600

# Create the screen
screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
pygame.display.set_caption("Pygame Dodger Challenge")

# Colors
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
RED = (255, 0, 0)
GREEN = (0, 255, 0)

# Game clock
clock = pygame.time.Clock()


# ------------------------------------------------------------
# 2. SPRITE CLASSES
# ------------------------------------------------------------

# Player class
class Player(pygame.sprite.Sprite):
    def __init__(self):
        super().__init__()
        self.image = pygame.Surface((50, 40))
        self.image.fill(GREEN)
        self.rect = self.image.get_rect()
        self.rect.centerx = SCREEN_WIDTH / 2
        self.rect.bottom = SCREEN_HEIGHT - 10
        self.speed = 8 # Player's movement speed

    def update(self):
        # --- PLAYER KEYBOARD CONTROL ---
        # Get a list of all keys currently being pressed down
        keys = pygame.key.get_pressed()
        
        # Move left if the left arrow key is pressed
        if keys[pygame.K_LEFT]:
            self.rect.x -= self.speed
        # Move right if the right arrow key is pressed
        if keys[pygame.K_RIGHT]:
            self.rect.x += self.speed
            
        # Keep player on the screen
        if self.rect.left < 0:
            self.rect.left = 0
        if self.rect.right > SCREEN_WIDTH:
            self.rect.right = SCREEN_WIDTH

# Enemy class
class Enemy(pygame.sprite.Sprite):
    def __init__(self):
        super().__init__()
        self.image = pygame.Surface((30, 30))
        # --- BRONZE CHALLENGE 2: Make Enemies Red ---
        # CHALLENGE GOES HERE: Change the color below to RED
        self.image.fill(WHITE) 
        self.rect = self.image.get_rect()
        # Spawn at a random position at the top
        self.rect.x = random.randrange(SCREEN_WIDTH - self.rect.width)
        self.rect.y = random.randrange(-100, -40)
        
        # --- SILVER CHALLENGE 3: Variable Enemy Speeds ---
        # CHALLENGE GOES HERE: Change these to random ranges
        self.speed_y = 2 
        self.speed_x = 0

    def update(self):
        # Move the enemy down
        self.rect.y += self.speed_y
        self.rect.x += self.speed_x # This is for side-to-side movement

        # --- GOLD CHALLENGE 5: Wave Pattern Movement ---
        # CHALLENGE GOES HERE: Add the sine wave logic to modify self.rect.x or self.rect.y
        
        # Reset enemy to the top if it goes off the bottom of the screen
        if self.rect.top > SCREEN_HEIGHT + 10:
            self.rect.x = random.randrange(SCREEN_WIDTH - self.rect.width)
            self.rect.y = random.randrange(-100, -40)
            self.speed_y = 2 # Reset speed in case it was changed


# ------------------------------------------------------------
# 3. GAME SETUP
# ------------------------------------------------------------

# --- SILVER CHALLENGE 4: Add Collision Sound ---
# CHALLENGE GOES HERE: Load your sound effect here
# collision_sound = pygame.mixer.Sound("your_sound_file.wav")

# Sprite groups
all_sprites = pygame.sprite.Group()
enemies = pygame.sprite.Group()

# Create the player
player = Player()
all_sprites.add(player)

# --- BRONZE CHALLENGE 1: Create Three Enemies ---
# CHALLENGE GOES HERE: Use a for loop to create more enemies
enemy = Enemy()
all_sprites.add(enemy)
enemies.add(enemy)


# ------------------------------------------------------------
# 4. GAME LOOP
# ------------------------------------------------------------
running = True
game_over = False

# --- GOLD CHALLENGE 6: Lives System ---
# CHALLENGE GOES HERE: Create a 'lives' variable
# lives = 3

while running:
    # Keep loop running at the right speed
    clock.tick(60)

    # Process input (events)
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # --- Main game logic goes here ---
    if not game_over:
        # Update all sprites
        all_sprites.update()

        # Check for collisions between player and enemies
        hits = pygame.sprite.spritecollide(player, enemies, False)
        if hits:
            # --- SILVER CHALLENGE 4: Add Collision Sound ---
            # CHALLENGE GOES HERE: Play the sound effect
            
            # --- GOLD CHALLENGE 6: Lives System ---
            # CHALLENGE GOES HERE: Instead of setting game_over to True, decrease lives.
            # Only set game_over to True if lives are 0.
            
            game_over = True # For the basic game, any hit is game over.

    # --- Drawing code goes here ---
    screen.fill(BLACK)
    all_sprites.draw(screen)

    if game_over:
        # If the game is over, show a "GAME OVER" message
        font = pygame.font.Font(None, 74)
        text = font.render("GAME OVER", True, RED)
        text_rect = text.get_rect(center=(SCREEN_WIDTH/2, SCREEN_HEIGHT/2))
        screen.blit(text, text_rect)

    # Flip the display
    pygame.display.flip()

# ------------------------------------------------------------
# 5. QUIT
# ------------------------------------------------------------
pygame.quit()
            </div>
