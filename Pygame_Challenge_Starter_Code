    <script>
        function copyCode() {
            const code = document.getElementById('code-content').textContent;
            navigator.clipboard.writeText(code);
            const btn = document.querySelector('.copy-btn');
            btn.textContent = 'Copied!';
            setTimeout(() => {
                btn.textContent = 'Copy Code';
            }, 2000);
        }
    </script>
